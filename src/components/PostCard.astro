---
interface Props {
  title: string;
  description: string;
  date: string;
  image: string;
  href: string;
}

const { title, description, date, image, href } = Astro.props;
---

<a
  href={href}
  class="group block overflow-hidden rounded-2xl bg-white shadow-sm ring-1 ring-gray-200 transition-all hover:scale-[1.02] hover:shadow-md"
>
  <div class="aspect-video w-full overflow-hidden bg-gray-100">
    <img
      src={image}
      alt={title}
      class="h-full w-full object-cover transition-transform duration-300"
    />
  </div>
  <div class="flex flex-col gap-2 p-6">
    <span class="text-xs font-medium text-gray-500">{date}</span>
    <h3
      class="text-xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors"
    >
      {title}
    </h3>
    <p class="text-gray-600 line-clamp-2">
      {description}
    </p>
  </div>
</a>
