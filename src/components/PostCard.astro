---
interface Props {
  title: string;
  description: string;
  date: string;
  image: string;
  href: string;
}

const { title, description, date, image, href } = Astro.props;
---

<a
  href={href}
  class="group block overflow-hidden rounded-2xl bg-token-card shadow-sm border border-token-primary transition-all duration-200 hover:scale-[1.01] hover:shadow-md hover:border-token-hover hover:bg-token-hover"
>
  <div class="aspect-video w-full overflow-hidden bg-token-image border-b border-token-secondary transition-colors duration-200 group-hover:border-token-hover">
    <img
      src={image}
      alt={title}
      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
    />
  </div>
  <div class="flex flex-col gap-2 p-6">
    <span class="text-xs font-medium text-token-date">{date}</span>
    <h3
      class="text-xl font-semibold text-token-primary group-hover:text-token-secondary transition-colors duration-200"
    >
      {title}
    </h3>
    <p class="text-token-secondary line-clamp-2">
      {description}
    </p>
  </div>
</a>
