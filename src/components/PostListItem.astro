---
interface Props {
  title: string;
  description: string;
  date: string;
  image: string;
  href: string;
}

const { title, description, date, image, href } = Astro.props;
---

<a
  href={href}
  class="group flex flex-col gap-8 border-b-[0.5px] border-gray-200/50 py-12 transition-all hover:bg-gray-50/50 sm:flex-row sm:items-center sm:justify-between"
>
  <div class="flex flex-1 flex-col gap-4 pr-8">
    <span class="text-[11px] font-bold uppercase tracking-widest text-gray-400"
      >{date}</span
    >
    <h3
      class="text-2xl font-bold tracking-tight text-gray-900 transition-colors group-hover:text-gray-700 sm:text-3xl"
    >
      {title}
    </h3>
    <p class="text-[17px] leading-relaxed text-gray-500 line-clamp-2">
      {description}
    </p>
  </div>
  <div
    class="relative h-64 w-full shrink-0 overflow-hidden rounded-3xl bg-gray-100 shadow-sm transition-all duration-500 group-hover:shadow-md sm:h-40 sm:w-64"
  >
    <img
      src={image}
      alt={title}
      class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-105"
    />
    <div
      class="absolute inset-0 bg-black/0 transition-colors duration-500 group-hover:bg-black/5"
    >
    </div>
  </div>
</a>
