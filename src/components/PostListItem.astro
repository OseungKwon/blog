---
interface Props {
  title: string;
  description: string;
  date: string;
  image: string;
  href: string;
}

const { title, description, date, image, href } = Astro.props;
---

<a
  href={href}
  class="group flex flex-col gap-6 border-b border-gray-100 py-8 transition-opacity hover:opacity-70 sm:flex-row sm:items-center sm:justify-between"
>
  <div class="flex flex-1 flex-col gap-3 pr-4">
    <span class="text-sm font-medium text-gray-400">{date}</span>
    <h3 class="text-2xl font-bold tracking-tight text-gray-900">
      {title}
    </h3>
    <p class="text-base text-gray-500 line-clamp-2">
      {description}
    </p>
  </div>
  <div
    class="h-48 w-full shrink-0 overflow-hidden rounded-xl bg-gray-100 sm:h-32 sm:w-48"
  >
    <img src={image} alt={title} class="h-full w-full object-cover" />
  </div>
</a>
