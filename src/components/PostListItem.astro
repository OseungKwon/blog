---
interface Props {
  title: string;
  description: string;
  date: string;
  image: string;
  href: string;
  category: 'book' | 'tech';
  tags: string[];
}

const { title, description, date, image, href, category, tags } = Astro.props;

const categoryLabels = {
  book: 'Book',
  tech: 'Tech',
};
---

  <a
    href={href}
    class="group flex flex-col gap-8 border-b-[0.5px] border-token-primary py-12 transition-all duration-200 hover:bg-token-hover hover:border-token-hover sm:flex-row sm:items-center sm:justify-between"
  >
  <div
    class="relative h-64 w-full shrink-0 overflow-hidden rounded-3xl bg-token-image border border-token-secondary transition-all duration-200 group-hover:border-token-hover order-first sm:order-last sm:h-40 sm:w-64"
  >
    <img
      src={image}
      alt={title}
      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
    />
  </div>
  <div class="flex flex-1 flex-col gap-4 pr-8">
    <div class="flex items-center gap-3 flex-wrap">
      <span class="text-xs font-semibold uppercase tracking-wider px-2 py-0.5 rounded bg-token-category text-token-category">
        {categoryLabels[category]}
      </span>
      <span class="text-[11px] font-bold uppercase tracking-widest text-token-date"
        >{date}</span
      >
    </div>
    <h3
      class="text-2xl font-bold tracking-tight text-token-primary transition-all duration-200 group-hover:text-token-secondary sm:text-3xl"
    >
      {title}
    </h3>
    <p class="text-[17px] leading-relaxed text-token-secondary line-clamp-2">
      {description}
    </p>
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-1.5">
        {tags.map((tag) => (
          <span class="text-[11px] px-2 py-0.5 rounded-full bg-token-tertiary text-token-secondary">
            #{tag}
          </span>
        ))}
      </div>
    )}
  </div>
</a>
