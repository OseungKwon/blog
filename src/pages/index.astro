---
import Layout from '../layouts/Layout.astro';
import PostListItem from '../components/PostListItem.astro';

const posts = [
  {
    title: 'Getting Started with Astro',
    description:
      'Learn how to build a super fast blog with Astro and Tailwind CSS. Astro is a new kind of static site builder that delivers lightning-fast performance.',
    date: 'Nov 27, 2025',
    image:
      'https://images.unsplash.com/photo-1545665277-5937489579f2?auto=format&fit=crop&q=80&w=800',
    href: '#',
  },
  {
    title: 'Why iOS Design is Popular',
    description:
      'Exploring the principles of iOS design: clarity, deference, and depth. These principles help create intuitive and engaging user experiences.',
    date: 'Nov 26, 2025',
    image:
      'https://images.unsplash.com/photo-1611162617474-5b21e879e113?auto=format&fit=crop&q=80&w=800',
    href: '#',
  },
  {
    title: 'The Power of Tailwind CSS',
    description:
      'How utility-first CSS can speed up your development workflow. Stop fighting with custom CSS classes and embrace the utility-first approach.',
    date: 'Nov 25, 2025',
    image:
      'https://images.unsplash.com/photo-1587620962725-abab7fe55159?auto=format&fit=crop&q=80&w=800',
    href: '#',
  },
];
---

<Layout>
  <div class="space-y-12">
    <section class="py-12 text-center">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
        Latest Posts
      </h1>
      <p class="mt-4 text-lg text-gray-500">Thoughts, stories, and ideas.</p>
    </section>

    <div class="flex flex-col">
      {posts.map((post) => <PostListItem {...post} />)}
    </div>
  </div>
</Layout>
